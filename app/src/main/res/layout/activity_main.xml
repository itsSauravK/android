<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Tbill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:text="@string/main.msg.billamount"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorWhite" />

    <EditText
        android:id="@+id/BillAmt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Tbill"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/main.hint.billamount"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorLightGray"
        android:background="@android:color/transparent"
        />
    <View
        android:id="@+id/seperators"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/BillAmt"
        android:layout_margin="1dp"
        />


    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/seperators"
        android:layout_marginTop="@dimen/activity_vertical_margin_big"
        >
        <ImageButton
            android:id="@+id/Imagebutton1"
            android:backgroundTint="@color/colorBlue"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_image_buttons"
            android:layout_weight="1"
            android:src="@drawable/emoticon_sad_outline"
            />
        <ImageButton
            android:id="@+id/Imagebutton2"
            android:layout_width="0dp"
            android:backgroundTint="@color/colorBlue"
            android:layout_height="@dimen/activity_image_buttons"
            android:layout_weight="1"
            android:src="@drawable/emoticon_neutral_outline"
        />
        <ImageButton
            android:id="@+id/Imagebutton3"
            android:backgroundTint="@color/colorBlue"
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_image_buttons"
            android:layout_weight="1"
            android:src="@drawable/emoticon_outline"
        />



    </LinearLayout>
    <View
        android:id="@+id/seperators2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/buttons"
        android:layout_margin="1dp"
        />

    <TextView
        android:id="@+id/servicerating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main.msg.servicerating"
        android:layout_below="@+id/seperators2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        />

    <LinearLayout
        android:id="@+id/buttons1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/servicerating"
        android:layout_marginTop="@dimen/activity_vertical_margin_big"
        android:orientation="horizontal"

        >

    <TextView

        android:id="@+id/TvTippercent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="@string/main.msg.tippercent"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorWhite"
        android:paddingBottom="10dp"

        />
    <TextView

        android:id="@+id/TvTipAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="@string/main.msg.tiptotal"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorWhite"
        android:paddingBottom="10dp"

        />
    </LinearLayout>
    <View
        android:id="@+id/seperators3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/buttons1"
        android:layout_margin="1dp"
        />
    8        <TextView
    android:id="@+id/billtotal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/seperators3"
    android:layout_marginTop="@dimen/activity_vertical_margin_big"
    android:text="@string/main.msg.billtotal"
    android:textAllCaps="true"
    android:textColor="@color/colorWhite"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    android:gravity="center"
    />
    <TextView
        android:id="@+id/billtotalamount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/billtotal"
        android:layout_marginTop="@dimen/activity_vertical_margin_big"
        android:text="@string/main.msg.billtotalresult"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:gravity="center"

        />


</RelativeLayout>